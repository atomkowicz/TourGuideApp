<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:id="@+id/artist_list_item"
			  android:orientation="horizontal"
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content">

	<android.support.v7.widget.CardView
		xmlns:card_view="http://schemas.android.com/apk/res-auto"
		android:id="@+id/card_view"
		android:layout_width="match_parent"
		android:layout_height="@dimen/photo_height_medium"
		card_view:cardCornerRadius="@dimen/radius"
		android:elevation="@dimen/elevation"
		android:layout_margin="@dimen/tiny_margin"
		android:layout_gravity="center_vertical"
		android:paddingTop="@dimen/appbar_padding_top"
		android:paddingBottom="@dimen/appbar_padding_top">

		<ImageView
			android:id="@+id/list_item_artist_image"
			android:layout_gravity="center_vertical"
			android:layout_height="match_parent"
			android:layout_width="@dimen/photo_width_medium"
			android:scaleType="centerCrop"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_gravity="center_vertical"
			android:layout_marginLeft="@dimen/list_item_margin_left">

			<TextView
				android:id="@+id/list_item_artist_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				style="@style/HeadingMedium"/>

			<TextView
				android:id="@+id/list_item_artist_info"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/some_details"
				style="@style/HeadingSmall"/>

		</LinearLayout>

	</android.support.v7.widget.CardView>

</LinearLayout>




